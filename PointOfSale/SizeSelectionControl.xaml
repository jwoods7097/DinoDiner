<UserControl x:Class="DinoDiner.PointOfSale.SizeSelectionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DinoDiner.PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="320">
    <!--Allows the user to select a size-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" TextAlignment="Left" FontSize="30" Margin="20,0,0,0">
            Size:
        </TextBlock>
        <RadioButton Name="SmallRadioButton" Grid.Row="1" GroupName="Size">
            Small
        </RadioButton>
        <RadioButton Name="MediumRadioButton" Grid.Row="2" GroupName="Size">
            Medium
        </RadioButton>
        <RadioButton Name="LargeRadioButton" Grid.Row="3" GroupName="Size">
            Large
        </RadioButton>
    </Grid>
</UserControl>
